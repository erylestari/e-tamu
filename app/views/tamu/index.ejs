<%- include ('../partials/header'); -%>

  <main>
    <div class="jumbotron">
      <table class="table table-dark table-striped">
        <h2>
          <%= page %>
        </h2>
        <a href="/tamu/create" class="btn btn-primary active mt-3 mb-3" role="button" data-bs-toggle="button"
          aria-pressed="true" style="background-color: #111D5E; border-color: #111D5E; ">Tambah Tamu</a>
        <thead>
          <tr>
            <th>No</th>
            <th>Nama Tamu</th>
            <th>Nomor Telepon</th>
            <th>Instansi</th>
            <th>Bidang</th>
            <th>Keperluan</th>
            <th>Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach((user, index)=>{ %>
            <tr>
              <td>
                <%= index +=1 %>
              </td>
              <td>
                <%= user.namatamu %>
              </td>
              <td>
                <%= user.notel %>
              </td>
              <td>
                <%= user.instansi %>
              </td>
              <td>
                <%= user.bidang %>
              </td>
              <td>
                <%= user.keperluan %>
              </td>
              <td>
                <a href="tamu/edit/<%= user.id %>" class="btn btn-sm btn-primary mb-2"
                  style="background-color: #4F1DDE; border-color: #4F1DDE;">Edit</a>
                <a href="tamu/delete/<%= user.id %>" class="btn btn-sm btn-danger mb-2">Hapus</a>
              </td>
            </tr>
            <% }); %>
        </tbody>
      </table>
    </div>
  </main>

  <%- include ('../partials/footer'); -%>